# Window properties for Sway by Ricardo Steijn

# General
default_border pixel 3
default_floating_border pixel 3
gaps inner 10
smart_gaps on
smart_borders on

# Window rules
# Firefox & Chrome
for_window [app_id="firefox"] inhibit_idle fullscreen
for_window [app_id="Google-chrome"] inhibit_idle fullscreen
# Terminal
for_window [app_id="Alacritty"] floating enable, resize set $float-size
# File manager
for_window [app_id="thunar"] floating enable
# Pop up windows
for_window [app_id="engrampa"] floating enable
for_window [title="Discord Updater"] floating enable
for_window [title="Open Folder"] floating enable, resize set width 1200 height 700
for_window [app_id="electron"] floating enable, resize set $float-size
# OpenRGB
for_window [app_id="openrgb"] floating enable, resize set width 1600 height 800
# GTK theme settings
for_window [class="Lxappearance"] floating enable, resize set width 800 height 600
# Teams
for_window [class="Microsoft Teams - Preview"] inhibit_idle visible
# Battle.net
for_window [class="battle.net.exe"] floating enable
# Lutris
for_window [app_id="lutris"] floating enable
